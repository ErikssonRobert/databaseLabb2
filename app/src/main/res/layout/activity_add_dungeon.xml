<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_text_dungeon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of dungeon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edit_text_dungeon_floors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of floors"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_dungeon_name"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edit_text_dungeon_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Experience reward for clearing"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_dungeon_floors"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_add"
        android:text="Add dungeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAddDungeonButtonPressed"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_dungeon_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

</android.support.constraint.ConstraintLayout>
